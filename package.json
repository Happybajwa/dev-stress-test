{
  "name": "dev-stress-test",
  "version": "0.1.0",
  "description": "Simulate unhandled errors in development for React and Node projects",
  "main": "dist/react/react/index.js",
  "module": "dist/react/react/index.js",
  "types": "dist/types/react/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/react/react/index.js",
      "require": "./dist/react/react/index.js",
      "types": "./dist/types/react/index.d.ts"
    },
    "./testing": {
      "import": "./dist/react/react/testing/index.js",
      "require": "./dist/react/react/testing/index.js",
      "types": "./dist/types/react/testing/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && tsc -p tsconfig.react.json && copy src\\react\\*.css dist\\react\\react\\",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "format": "prettier --write \"src/**/*.{ts,tsx}\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\" \"tests/**/*.ts\"",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run test && npm run build",
    "prepack": "npm run build"
  },
  "keywords": [
    "dev",
    "testing",
    "errors",
    "react",
    "node",
    "debug"
  ],
  "author": "dev_harry",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.0.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.19.11",
    "@types/react": "^18.2.0",
    "@types/styled-components": "^5.1.26",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^30.1.2",
    "jsdom": "^26.1.0",
    "prettier": "^3.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.0",
    "styled-components": "^6.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.1.0"
  },
  "peerDependencies": {
    "react": "^18.0.0"
  }
}
